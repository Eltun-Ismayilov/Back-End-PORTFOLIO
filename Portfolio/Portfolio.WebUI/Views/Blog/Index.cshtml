@model PagedViewModel<BlogPost>

@{
    ViewData["Title"] = "Blog";
}



<div role="tabpanel" class="tab-pane fade  in" id="blog">
    <div class="inside-sec">
        <!-- BIO AND SKILLS -->
        <h5 class="tittle">BLOG</h5>

        <!-- Blog -->
        <section class="blog blog-page padding-20 padding-top-50 padding-bottom-50 ">

            @foreach (var item in Model.Items)
            {
                <!-- Blog Post -->
                <article>
                    <img class="img-responsive" src="~/uploads/images/@item.ImagePati" alt="">
                    <div class="post-info">
                        <div class="post-in">
                            <div class="extra"> <span><i class="icon-calendar"></i>@item.CreateData</span> <span class="margin-left-15"><i class="icon-user"></i>Admin</span> <span class="margin-left-15"><i class="icon-bubbles"></i> Featured</span></div>
                            <a asp-action="Details" asp-route-id="@item.Id" class="tittle-post"> @item.Title </a>
                            <p>@item.Description</p>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-1">Read MOre <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </article>
            }



            <!-- Pagination -->
            @*<ul class="pagination">
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">Next</a></li>
                </ul>*@
            <div>
                @Model.GetPagenation(Url, "index", "Admin")
            </div>
        </section>
    </div>
</div>